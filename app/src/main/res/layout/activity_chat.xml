<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.ChatActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activityChat_chatRecyclerView"
            android:layout_above="@+id/activityChat_linearLayout"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:id="@+id/activityChat_linearLayout"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

        <EditText
                android:id="@+id/activityChat_messageBox"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="@string/typeMessageButton"
                android:layout_marginStart="10dp"
                android:paddingStart="10dp"
                android:background="@drawable/message_box_background"
                android:layout_weight="85"
                android:autofillHints="@string/typeMessageButton"
                android:inputType="text"
                android:textColorHint="#851C2020"
                tools:ignore="RtlSymmetry"/>
        <ImageView
                android:id="@+id/activityChat_sendButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/send_message_icon"
                android:layout_marginBottom="5dp"
                android:layout_weight="15"
                android:contentDescription="@string/imageContentDescription"/>
    </LinearLayout>
</RelativeLayout>