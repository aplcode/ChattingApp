<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:animateLayoutChanges="true"
                                                   tools:context=".activity.CreatingChatActivity">

    <TextView
            android:id="@+id/textViewSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selectUserNewDialogBox"
            android:textSize="27sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/userFindBox"/>
    <RelativeLayout
            android:id="@+id/userFindBox"
            android:background="@drawable/message_box_background"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginStart="-25dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewSelect"
            app:layout_constraintBottom_toTopOf="@+id/usersRecyclerView"
            app:layout_constraintStart_toStartOf="@+id/textViewSelect">

        <EditText
                android:id="@+id/startEnterUsername"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/startEnterUsernameBox"
                android:autofillHints="@string/startEnterUsernameBox"
                android:inputType="text"
                android:textColorHint="#851C2020"
                android:layout_margin="6dp"
        />
    </RelativeLayout>

    <TextView
            android:id="@+id/activity_select_user_textBar"
            android:layout_width="186dp"
            android:layout_height="116dp"
            android:visibility="invisible"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/usersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            app:layout_constraintBaseline_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            tools:listitem="@layout/user_layout"
            app:layout_constraintTop_toBottomOf="@+id/userFindBox"/>

</androidx.constraintlayout.widget.ConstraintLayout>